{
  "name": "speicher210/functional-test-bundle",
  "type": "symfony-bundle",
  "description": "Symfony bundle for functional testing",
  "license": "MIT",
  "authors": [
    {
      "name": "Dragos Protung",
      "email": "dragos@protung.de"
    },
    {
      "name": "Cezary StÄ™pkowski",
      "email": "cezary.stepkowski@protonmail.com"
    }
  ],
  "require": {
    "php": "~8.0",
    "ext-json": "*",
    "dama/doctrine-test-bundle": "^6.0",
    "doctrine/orm": "^2.7",
    "doctrine/data-fixtures": "^1.4.1",
    "doctrine/doctrine-fixtures-bundle": "^3.1",
    "phpunit/phpunit": "^9.0",
    "coduo/php-matcher": "^6.0",
    "symfony/browser-kit": "^5.4",
    "symfony/css-selector": "^5.4",
    "symfony/framework-bundle": "^5.4"
  },
  "require-dev": {
    "ext-imagick": "*",
    "symfony/console": "^5.4",
    "symfony/security-core": "^5.4",
    "mikey179/vfsstream": "^1.6",
    "doctrine/coding-standard": "^9.0",
    "phpstan/phpstan": "^1.4.6",
    "phpstan/phpstan-phpunit": "^1.0.0",
    "phpstan/phpstan-strict-rules": "^1.1.0",
    "lexik/jwt-authentication-bundle": "^2.14"
  },
  "suggest": {
    "ext-imagick": "To assert images and create fixture images",
    "symfony/console": "To use command line tool to generate tests stubs",
    "symfony/security-core": "To mock authentication",
    "mikey179/vfsstream": "To mock uploading large files"
  },
  "autoload": {
    "psr-4": {
      "Speicher210\\FunctionalTestBundle\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Speicher210\\FunctionalTestBundle\\Tests\\": "tests"
    }
  },
  "scripts": {
    "cs-check": "vendor/bin/phpcs -p",
    "cs-fix": "vendor/bin/phpcbf -p",
    "test": "vendor/bin/phpunit",
    "analyse": "phpstan analyse --memory-limit=256M --configuration=phpstan.neon src/ tests/ --level 5",
    "check": [
      "@cs-check",
      "@analyse",
      "@test"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.0-dev"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ocramius/package-versions": true
    }
  }
}
