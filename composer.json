{
  "name": "speicher210/functional-test-bundle",
  "description": "Symfony bundle for functional testing",
  "license": "MIT",
  "type": "symfony-bundle",
  "authors": [
    {
      "name": "Dragos Protung",
      "email": "dragos@protung.de"
    },
    {
      "name": "Cezary StÄ™pkowski",
      "email": "cezary.stepkowski@protonmail.com"
    }
  ],
  "require": {
    "php": "~8.1.0",
    "ext-json": "*",
    "azjezz/psl": "^2.0.1",
    "coduo/php-matcher": "^6.0.7",
    "dama/doctrine-test-bundle": "^7.0.0",
    "doctrine/data-fixtures": "^1.5.2",
    "doctrine/doctrine-fixtures-bundle": "^3.4",
    "doctrine/orm": "^2.7",
    "phpunit/phpunit": "^9.5",
    "symfony/browser-kit": "^5.4 || ^6.1",
    "symfony/css-selector": "^5.4 || ^6.1",
    "symfony/dependency-injection": "^5.4 || ^6.1",
    "symfony/framework-bundle": "^5.4.1 || ^6.1"
  },
  "require-dev": {
    "ext-imagick": "*",
    "doctrine/coding-standard": "^9.0.2",
    "ergebnis/composer-normalize": "^2.28.3",
    "mikey179/vfsstream": "^1.6.11",
    "php-standard-library/psalm-plugin": "^2.0.2",
    "phpstan/phpstan": "^1.8.2",
    "phpstan/phpstan-phpunit": "^1.1.1",
    "phpstan/phpstan-strict-rules": "^1.4.2",
    "phpstan/phpstan-symfony": "^1.2.13",
    "psalm/plugin-phpunit": "^0.17.0",
    "psalm/plugin-symfony": "^3.1.8",
    "squizlabs/php_codesniffer": "^3.7.1",
    "symfony/console": "^5.4.8 || ^6.1",
    "symfony/security-core": "^5.4.8 || ^6.1",
    "twig/twig": "^3.4.2",
    "vimeo/psalm": "^4.26.0"
  },
  "conflict": {
    "nikic/php-parser": "<4.13.2",
    "twig/twig": "<3.0.0"
  },
  "suggest": {
    "ext-imagick": "To assert images and create fixture images",
    "mikey179/vfsstream": "To mock uploading large files",
    "symfony/console": "To use command line tool to generate tests stubs",
    "symfony/security-core": "To mock authentication"
  },
  "autoload": {
    "psr-4": {
      "Speicher210\\FunctionalTestBundle\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Speicher210\\FunctionalTestBundle\\Tests\\": "tests"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ocramius/package-versions": true,
      "ergebnis/composer-normalize": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.0-dev"
    }
  },
  "scripts": {
    "analyse": [
      "@analyse-phpstan",
      "@analyse-psalm"
    ],
    "analyse-phpstan": [
      "phpstan analyse --memory-limit=256M"
    ],
    "analyse-phpstan-update": [
      "phpstan analyse  --memory-limit=256M --generate-baseline"
    ],
    "analyse-psalm": [
      "psalm --no-cache --show-info=false"
    ],
    "analyse-psalm-update": [
      "psalm --no-cache --set-baseline=psalm.baseline.xml"
    ],
    "check": [
      "composer validate",
      "composer normalize --dry-run",
      "@cs-check",
      "@analyse",
      "@test"
    ],
    "cs-check": "phpcs -p",
    "cs-fix": "phpcbf -p",
    "test": "phpunit --testdox --color=always"
  }
}
